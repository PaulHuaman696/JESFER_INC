<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawarLayout"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="729dp"
            android:paddingTop="70dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/button_rounded"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/sistema_icon"
                            android:background="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sistema"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/button_rounded"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/server_icon"
                            android:background="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datos"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/button_rounded"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/robot_icon"
                            android:background="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Marketing"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/button_rounded"
                        android:gravity="center"
                        >

                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/black"
                            android:scaleType="fitCenter"
                            android:src="@drawable/red_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ComunicaciÃ³n"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/button_rounded"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/user_pc_icon"
                            android:background="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cursos"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/button_rounded"
                        android:gravity="center"
                        >
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/notice_icon"
                            android:background="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Noticias"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:background="@color/colorPrimary">


            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="78dp"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_person_26"/>
            <ImageButton
                android:id="@+id/imgWidget"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@color/colorPrimary"
                android:padding="12dp"
                app:srcCompat="@drawable/widget_icon"/>

            <ImageButton
                android:id="@+id/imgCarShop"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/carrito_shop"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:background="@color/colorPrimary"/>
            <ImageButton
                android:id="@+id/imgHome"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_home_25" />
            <ImageButton
                android:id="@+id/imgMenu"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:src="@drawable/baseline_subject_24"
                android:layout_width="79dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"/>




        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/nav_drawar"/>

</androidx.drawerlayout.widget.DrawerLayout>